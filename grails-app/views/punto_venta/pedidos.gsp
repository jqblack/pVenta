<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-12 ">
                <div class="card pb-0 mb-1">
                    <div class="card-body py-0">
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="callout callout-info">
                                    <small class="text-muted">Pedidos Abierto</small>
                                    <br>
                                    <strong class="h4 text-success" id="count_pedidos"></strong>
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="callout callout-info">
                                    <small class="text-muted">Monto cerrado</small>
                                    <br>
                                    <strong class="h4 text-success" id="monto_total_cerrado"></strong>
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="callout callout-info">
                                    <small class="text-muted">Monto total</small>
                                    <br>
                                    <strong class="h4 text-success" id="monto_total"></strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" id="content">
            <div class="col-12 ">
                <div class="card">
                    <div class="card-body">
                        %{--${session.idnodo.toString()}--}%

                        <div class="row">
                            <div class="col-12 mb-2 ">
                                <h4>Fecha del sistema: ${fechaOperacion.format('dd/MM/yyyy')}</h4>

                                <div class="btn-group pull-right" role="group" aria-label="Basic example">
                                    <button type="button"
                                            class="btn btn-${session.empresa.fRecibirPedidosApp ? 'success' : 'danger'}">
                                        <i class="fa fa-mobile-phone font-2xl d-block mt-2"></i> ${session.empresa.fRecibirPedidosApp ? 'Conectado' : 'Desconectado'}
                                    </button>
                                    <button type="button"
                                            class="btn btn-${session.idnodo.toString().equals("") ? 'danger' : 'success'}"
                                            id="btn-conectar-printer">
                                        <i class="fa font-2xl d-block mt-2 fa-print"></i> ${session.idnodo.toString().equals("") ? 'Desconectado' : 'Conectado'}
                                    </button>
                                    <button type="button" class="btn btn-primary" id="btn-toolbar-facturar"><i
                                            class="icons font-2xl d-block mt-2 fa fa-ticket"></i> Facturar</button>
                                    <button type="button" class="btn btn-primary" id="btn-toolbar-imprimir-orden"><i
                                            class="icons font-2xl d-block mt-2 fa fa-sticky-note"></i> Imprimir Orden
                                    </button>
                                    <button type="button" class="btn btn-primary" id="btn-toolbar-asignar-ordenes"><i
                                            class="icons font-2xl d-block mt-2 fa fa-check"></i> Asignar
                                    </button>
                                    <button type="button" class="btn btn-primary" id="btn-registrar-orden"><i
                                            class="icons font-2xl d-block mt-2 cui-note"></i> Registrar Orden</button>
                                    <button type="button" class="btn btn-primary"
                                            id="btn-actualizar-ordenes-cerradas"><i
                                            class="fa font-2xl d-block mt-2 fa-refresh"></i> Cerradas</button>
                                    <button type="button" class="btn btn-primary" id="btn-actualizar-ordenes"><i
                                            class="fa font-2xl d-block mt-2 fa-refresh"></i> Abiertas</button>
                                    <g:link controller="home" class="btn btn-primary"><i
                                            class="fa font-2xl d-block mt-2 fa-home"></i> Ir al inicio</g:link>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div id="tabla">
                                </div>
                            </div>
                        </div>
                    </div
                </div>
            </div>
        </div></div>

    <div class="row">
        <div class="col-12 col-md-5 col-xl-6 col-lg-6" id="detalle-pedido">
        </div>
    </div>

    <div class="modal fade" id="asignar-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Mensajeros</h4>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>

                <div class="modal-body">

                    <div class="row">
                        <div class="col-12 col-md-12">
                            <div id="tabla_mensajeros">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
            <!-- /.modal-content-->
        </div>
        <!-- /.modal-dialog-->
    </div>

    <div class="modal fade" id="asignar-pedidos-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Asignar Pedidos</h4>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>

                <div class="modal-body">

                    <div class="form-group">
                        <label class="control-label">Mensajero</label>
                        <select class="form-control" id="list-mensajeros"></select>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-hashtag total-input"></i></span>
                        </div>
                        <input type="text" class="form-control font-weight-bold text-right total-input"
                               placeholder="ORD000000" name="idfactura" id="idfactura">

                        <div class="input-group-append">
                            <button class="btn btn-primary" id="btn-asignar-orden"><i class="fa fa-search"></i></button>
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-dollar total-input"></i></span>
                        </div>
                        <input type="text" class="form-control font-weight-bold text-right total-input"
                               placeholder="0.00" name="total-pedidos" id="total-pedidos" disabled>
                    </div>
                </div>

                <div class="modal-footer">
                    %{--<button class="btn btn-primary" type="button" id="btn-asignar-ordenes" >Asignar</button>--}%
                    <button class="btn btn-secondary" type="button" id="btn-modal-asignar">Asignar</button>
                </div>
            </div>
            <!-- /.modal-content-->
        </div>
        <!-- /.modal-dialog-->
    </div>

    <div class="modal fade" id="conectar-printer-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12 col-md-12">
                            <label class="control-label">Codigo</label>

                            <div class="input-group mb-2">
                                <input type="text" class="form-control" name="idnodo" id="idnodo" placeholder="Codigo"
                                       aria-label="Codigo" aria-describedby="basic-addon2">

                                <div class="input-group-append">
                                    <button class="btn btn-outline-success" type="button"
                                            id="btn-conectar-pedidos">Conectar</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-12">
                            <label class="control-label">Configuracion</label>
                            <div class="input-group">
                                <select id="idprinterconfig" class="form-control">
                                    <g:each in="${ configuracionesToPrint }">
                                        <g:if test="${ it.descripcion_proceso == "Ordenes" }">
                                            <option selected value="${ it.value }">${it.label}</option>
                                        </g:if>
                                        <g:else>
                                            <option value="${it.value}">${it.label}</option>
                                        </g:else>
                                    </g:each>
                                </select>
                                <div class="input-group-append">
                                    <button
                                            class="btn btn-outline-success"
                                            type="button"
                                            id="btn-cambiar-printer-config">Guardar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" data-dismiss="modal" aria-label="Close">Cerrar</button>
                </div>
            </div>
            <!-- /.modal-content-->
        </div>
        <!-- /.modal-dialog-->
    </div>

    <div class="modal fade" id="crear-pedidos-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog custom-modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title">Registrar Orden</h6>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>

                <div class="modal-body" id="crear-pedidos-modal-content">

                </div>
            </div>
            <!-- /.modal-content-->
        </div>
        <!-- /.modal-dialog-->
    </div>
    <asset:javascript src="validaciones.js"/>
    <asset:javascript src="pedidos.js"/>
</div>
</div>

</body>
